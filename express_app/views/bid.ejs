  <title>RideX | Rider Dashboard</title>

  <!-- Custom fonts for this template-->
  <link href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" rel="stylesheet" type="text/css">

  <!-- Custom styles for this template-->
  <link rel="stylesheet" href="../assests/dashboard.css">
<style>

.auth__form_actions .btn {
  border-radius: 30px;
  width:20%;
  background: #4d5bcc;
  box-shadow: 0 2px 12px rgba(50, 128, 228, 0.1);
    transition-duration: .5s;
}

.auth__form_actions .btn:hover{
    background: white;
    color:#584dc3;
    transition-duration: .5s;
    box-shadow: 0 2px 12px rgba(50, 128, 228, 0.5)
}
</style>
</head>

<body id="page-top">

  <nav class="navbar navbar-expand static-top"  style="background-image: linear-gradient(to right,#584dc3, #3280e4); ">
    <!-- border-bottom:1px solid floralwhite -->

    <a class="navbar-brand mr-1 text-white" href="home">RideX</a>

    <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
      <i class="fas fa-bars"></i>
    </button>

    <!-- Navbar -->
    <ul class="navbar-nav ml-auto mr-0 mr-md-3 my-2 my-md-0">    
      <li class="nav-item dropdown no-arrow">
        <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-user-circle fa-fw"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
          <a class="dropdown-item " href="/logout" >Logout</a>
      </li>
    </ul>

  </nav>

  <div id="wrapper">

    <!-- Sidebar -->
    <ul class="sidebar navbar-nav text-dark" style="background-image: linear-gradient(#3280e4, #584dc3); ">
      <li class="nav-item active">
        <a class="nav-link" href="/homer">
          <i class="fas fa-fw fa-tachometer-alt text-warning"></i>
          <span>Dashboard</span>
        </a>
      </li>


      <li class="nav-item">
        <a class="nav-link" href="/auction">
          <i class="fas fa-fw fa-user"></i>
          <span>Auction</span></a>
      </li>
      

      <li class="nav-item">
        <a class="nav-link" href="/rides">
          <i class="fas fa-fw fa-user-plus"></i>
          <span>Rides</span></a>
      </li> 
    </ul>

    <div id="content-wrapper" style="background:white;">

      <div class="container-fluid">

      <h2>Welcome To RideX! </h2>
    
      <hr>
      <div>
         <p><%=to%></p>
         <p><%=from%></p>
         <p><%=message%></p>
         <ul>
         <% for(var i=0;i<bid.length;i++) { %>
            <li><%= bid[i].value %> &nbsp; <%=bid[i].bidder%> &nbsp; <%=bid[i].vehicle%></li>
            <form method="POST">
                  <button type="submit"> Select this</button>
                  <input value="<%=bid[i].bidder%>" type="hidden" name="bidder"/>
                  <input value="<%=bid[i].value%>" type="hidden" name="value"/>                  
               </form>
         <%}%>

         </ul>
      </div>
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
      <footer class="sticky-footer">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright Â© RideX 2019</span>
          </div>
        </div>
      </footer>

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


  <!-- Bootstrap core JavaScript-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script >
    (function($) {
      "use strict"; // Start of use strict
    
      // Toggle the side navigation
      $("#sidebarToggle").on('click', function(e) {
        e.preventDefault();
        $("body").toggleClass("sidebar-toggled");
        $(".sidebar").toggleClass("toggled");
      });
    
      // Prevent the content wrapper from scrolling when the fixed side navigation hovered over
      $('body.fixed-nav .sidebar').on('mousewheel DOMMouseScroll wheel', function(e) {
        if ($(window).width() > 768) {
          var e0 = e.originalEvent,
            delta = e0.wheelDelta || -e0.detail;
          this.scrollTop += (delta < 0 ? 1 : -1) * 30;
          e.preventDefault();
        }
      });
    
      // Scroll to top button appear
      $(document).on('scroll', function() {
        var scrollDistance = $(this).scrollTop();
        if (scrollDistance > 100) {
          $('.scroll-to-top').fadeIn();
        } else {
          $('.scroll-to-top').fadeOut();
        }
      });
    
      // Smooth scrolling using jQuery easing
      $(document).on('click', 'a.scroll-to-top', function(event) {
        var $anchor = $(this);
        $('html, body').stop().animate({
          scrollTop: ($($anchor.attr('href')).offset().top)
        }, 1000, 'easeInOutExpo');
        event.preventDefault();
      });
    
    })(jQuery); // End of use strict
    
  </script>



</body>

</html>
